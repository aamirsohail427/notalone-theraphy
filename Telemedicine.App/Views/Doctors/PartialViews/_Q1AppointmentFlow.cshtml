<form asp-action="GetAppointmentReasonForm" asp-controller="Doctors" method="post" data-ajax="true" data-ajax-success="getAppointmentReasonFormSuccess(data)">
    <div class="modal-header mb-2">
        <h5 class="modal-title center">How would you like to connect with your dentist?</h5>
    </div>
    <div class="modal-body text-center">
        <div class="row">
            <div class="input-field col s12">
                <select class="browser-default">
                    <option value="video">Video</option>
                    <option value="phone">Phone</option>
                    <option value="messaging">Messaging</option>
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col s12 center">
                <button type="submit" class="waves-effect waves-light btn-small mb-1 mr-1 green-success">Submit <i class="material-icons right">send</i></button>
            </div>
        </div>
    </div>
</form>